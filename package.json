{
  "name": "gluify",
  "version": "2.0.0",
  "type": "module",
  "description": "A type-safe pipeline library for TypeScript that glues functions from different libraries together",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.js"
    }
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "sync": "git pull --rebase && npm install && npm test",
    "sync:quick": "git pull --rebase && npm install",
    "examples:basic": "tsx examples/test-examples.ts",
    "examples:errors": "tsx examples/test-error-handling.ts",
    "examples:utilities": "tsx examples/test-utilities.ts",
    "examples:lazy": "tsx examples/test-lazy-evaluation.ts",
    "examples:async": "tsx examples/test-async-pipeAsync.ts",
    "examples:all": "npm run examples:basic && npm run examples:errors && npm run examples:utilities && npm run examples:lazy && npm run examples:async",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "pipeline",
    "composition",
    "functional",
    "pipe",
    "chain",
    "flow",
    "typescript",
    "type-safe",
    "lazy-evaluation",
    "async",
    "utility",
    "lodash",
    "ramda"
  ],
  "author": "oharu121 <jefflin1201@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oharu121/gluify.git"
  },
  "bugs": {
    "url": "https://github.com/oharu121/gluify/issues"
  },
  "homepage": "https://github.com/oharu121/gluify#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
